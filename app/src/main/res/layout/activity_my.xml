<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:id="@+id/roots"
    android:background="#000"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/first_video_fragment"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        class="io.github.exoplayerapp.ui.fragment.FirstVideoFragment"/>
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_below="@id/first_video_fragment"
        class="io.github.exoplayerapp.ui.fragment.SecondVideoFragment"
        android:id="@+id/second_video_fragment"/>
</RelativeLayout>
